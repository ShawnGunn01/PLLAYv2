# Application
NODE_ENV=production
PORT=3000

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=pllay_prod
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=pllay_prod

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# PLLAY API
PLLAY_BASE_URL=https://api.pllay.io
PLLAY_API_URL=https://api.pllay.io
GAME_ID=your_game_id
GAME_SECRET_KEY=your_generated_secret_key

# OAuth
PLLAY_OAUTH_URL=https://account.pllay.io
PLLAY_OAUTH_API=https://oauth.pllay.io
OAUTH_APP_ID=your_oauth_app_id
OAUTH_SECRET_KEY=your_oauth_secret_key
REDIRECT_URL=https://your-domain.com/oauth/callback
SERVICE_NAME=PLLAYProductionService

# Security
ALLOWED_ORIGINS=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CORS_MAX_AGE=86400

# Deployment
DEPLOY_HOST=your-server.com
DEPLOY_USER=deploy
DEPLOY_KEY=/path/to/deploy_key